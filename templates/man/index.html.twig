    <main>
        <section id="special" class="py-5">
            <div class="container">
                {% for  categorie in categories %}
                <div class="title text-center py-5">
                    <h2 class="position-relative d-inline-block">{{categorie.libelle}}</h2>
                </div>
        
                <div class="special-list row g-0">
                    {% for produit in categorie.produits %}           
                        <div class="col-md-6 col-lg-6 col-xl-3 p-2">
                        <div class="special-img position-relative overflow-hidden">
                            <img src="{{asset('images/clients/')}}{{produit.image}}" class="w-100" style="width:300px;">
                            <span class="position-absolute d-flex align-items-center justify-content-center text-primary fs-6">
                                    <i class = "fas fa-heart"></i>
                                </span>
                        </div>
                        <div class="text-center">
                            <p class="text-capitalize mt-3 mb-1">{{ produit.nom }}</p>
                            <span class="fw-bold d-block">$ {{ produit.prix }}</span>
                            <a href="{{path("cart_add", {id: produit.id})}}" class="btn btn-success">
                                <i class="fa fa-shopping-cart"></i> Ajouter
                            </a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
